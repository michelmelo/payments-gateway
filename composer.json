{
    "name": "michelmelo/payments-gateway",
    "description": "A payment gateway SDK for various payment methods including MBWay, Multibanco, and international options.",
    "type": "library",
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/var-dumper": "^7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "MichelMelo\\PaymentGateway\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MichelMelo\\PaymentGateway\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit"
    }
}
